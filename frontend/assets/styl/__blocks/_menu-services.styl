.services
  width: 100%
  padding-top: 1rem

  &__item
    display: inline-block
    width: 33%
    margin: 1.8rem 0
    @media (max-width: 992px)
      width: 32%
    @media (max-width: 500px)
      width: 100%
      text-align: center

  &__link
    display: inline-block
    padding: .5rem 1rem
    transition: background .2s
    &:hover
      background: #e5e5e5
    & i.fa
      font-size: 3rem
      margin-right: 1rem
    & span
      color: #333
      position: relative
      top: -.5rem