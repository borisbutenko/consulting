.footer
  &__center
    & p.text-center > a
      display: inline-block
      text-align: left
      min-width: 15rem

  &__par
    &-info
      & span
        font-size: 1.1rem
        line-height: 1.6rem
        display: inline-block

.section
  &__how-work
    padding: 4rem 0
    & .text-circle-blue
      padding-top: 2rem
      margin-bottom: 2rem
      & i.fa
        font-size: 7rem
    & h5
      font-size: 1.7rem
      & + b
        display: block
        width: 50%
        margin: 1rem 0
        margin-left: 25%
        height: .2rem
        background: #333
      & ~ p
        font-size: 1.3rem
        line-height: 2rem
        @media (max-width: 768px)
          margin-bottom: 2rem

  &__info
    padding: 4rem 0
    background: rgba(239, 239, 239, .5)
    & h3
      text-align: center
      line-height: 3rem
      margin-bottom: 3rem
      & a
        text-decoration: underline
    & .text-circle-blue
      padding-top: 2rem
      & i.fa
        font-size: 4rem
        margin-bottom: 1rem
      & p
        font-size: 1.6rem
        font-weight: 600
        color: #0079c2
      & + p
        font-weight: 600
        margin-top: 2rem
        @media (max-width: 992px)
          margin-bottom: 2rem

  &__partners
    padding: 4rem 0
    & .partners
      margin-left: 3rem
      &__item
        padding: .5rem
        display: inline-block
        width: 10%
        border: .1rem solid gray
        margin-left: -.4rem
        margin-bottom: -.1rem
        @media (max-width: 768px)
          width: 14%
        @media (max-width: 500px)
          width: 20%
        @media (max-width: 400px)
          width: 33%
      &__link
        & img
          max-width: 100%

  &__contact
    padding: 4rem 0
    color: #fff
    background: url(../img/contact.jpg) no-repeat center
    background-size: cover
    & h2
      margin: 2rem 0
      text-transform: uppercase
      & + p
        margin: 2rem 0
        font-size: 1.6rem
    & .input
      color: #333
    & .textarea
      color: #333
    & .text-input
      width: 100%
    & .dropzone
      padding: 2rem
      margin-bottom: 1.5rem
      @media (max-width: 768px)
        margin-top: 1.5rem
      & span
        color: #333
    & .btn
      width: 100%
      white-space: unset !important

  &__map
    & #contact-google-map
      width: 100%
      height: 50rem
    & .address
      position: absolute
      top: 5rem
      left: 0
      &__item
        padding: 2rem
        background: #e3e0db
        opacity: .8
        &.active
          background: #fff

  &__counter
    padding: 4rem 0
    & .row > *
      margin-bottom: 1rem
      &:last-child
        margin-bottom: 0
    & .btn
      @media (max-width: 415px)
        margin-top: 1rem
    & h2
      margin-bottom: 1rem
      text-transform: uppercase
    & p
      font-weight: 600
      & .input-icon
        display: inline-block
        width: 21rem
        font-size: 1.6rem
        font-weight: 400
        margin-right: 1rem
        position: relative
        top: .1rem
    & b
      color: #fff
      padding: 0 .5rem
      display: inline-block
      margin: 0 .3rem
      border: .4rem solid transparent
      border-radius: .4rem
      background-image: linear-gradient(to top, #1477b8, #1e8bcc)
      &:first-of-type
        margin-left: 1rem
      &:last-of-type
        margin-right: 1rem

  &__social
    text-align: center
    padding: 1rem 0
    background: #efefef

  &__copyright
    padding: 2rem 0 1rem
    & p
      min-height: 3rem
    & i.fa
      font-size: 1.5rem
      margin-right: .5rem