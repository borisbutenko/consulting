.section
  &__audit
    & .tab-content
      margin-bottom: 4rem
      padding: 0 2rem
    & .restuct
      vertical-align: top
      margin-top: 2rem
      width: 100%
      display: inline-block
      position: relative
      text-align: center
      & i.fa
        display: block
        text-align: center
        font-size: 5rem
      & p
        font-size: 1.2rem
        text-align: center
        margin-top: 2rem
      & img
        width: 5rem
        position: absolute
        right: -3rem
        top: 2rem
    & .categories
      position: relative
      &__item
        background-image: linear-gradient(to top, #f7f7f7, transparent)
        border: .1rem solid #e1e1e1
        &:hover
          background: #0079c2
          & a
            color: #fff
            & i.fa
              color: #fff
        &.hovered
          & > a
            position: relative
            text-align: left
            padding-left: 3rem
            color: #fff
            background: rgba(0, 121, 194, .8)
            @media (max-width: 768px)
              padding-left: 2rem
            & > i.fa
              text-align: left
              padding-left: 2.5rem
              color: #fff
            & > span.menu-table__body
              cursor: default
              background: #0079c2
              width: 81.3%
              display: inline-block
              position: absolute
              left: 0
              top: 0
              font-size: 0
              margin-left: 18.8%
              text-align: left
              padding: 1.5rem 2.5rem 0.5rem 8rem
              border-left: none
              @media (max-width: 768px)
                display: none
              & > *
                font-size: 1.4rem
                display: inline-block
                width: 50%
                & > *
                  cursor: pointer
                  display: inline-block
                  padding: .2rem
                  color: #fff
                  line-height: 2.5rem
                  &:hover
                    background: rgba(35, 99, 138, .7)
                  & i.fa
                    margin-top: .2rem
                    float: left
                    font-size: 1.4rem
                    color: #fff
                    margin-right: 1rem
      &__link
        padding: 2rem
        display: block
        color: #333
        text-align: center
        & i.fa
          display: block
          text-align: center
          font-size: 4rem
          margin-bottom: 1rem
    & .categories-audit
      font-size: 0
      &__item
        font-size: 1.4rem
        display: inline-block
        width: 50%
      &__link
        color: #333
        display: inline-block
        min-width: 50%
        padding: 1rem 0
        padding-left: 1rem
        &:hover
          color: #fff
          background: #0079c2
          & i.fa
            color: #fff
        & i.fa
          margin-right: 1rem
    & button#show-categories
      width: 100%
      display: block
      margin-top: 2rem
      padding: .5rem
      & i.fa
        margin-right: .5rem

.aside
  & > *:first-of-type
    border-right: .1rem solid #c1c1c1
    padding-right: 5rem
    @media (max-width: 768px)
      border: none
      padding-right: 1.5rem
  & > *:last-of-type
    padding-left: 5rem
    @media (max-width: 768px)
      padding-left: 1.5rem
  &__right
    @media (max-width: 768px)
      margin-bottom: -12rem
    & i.fa
      font-size: 5rem
    & h5
      margin: 1rem 0
      & + p
        font-size: 1.2rem
        @media (max-width: 768px)
          margin-bottom: 2rem
  &__callback
    padding: 4rem 0
    & h2
      font-size: 2rem
      text-align: center
      margin-bottom: 2rem
    & .form-group
      width: 100%
      & .input
        width: 100%
    & button
      width: 100%
      margin-top: 2rem

.audit
  position: static
  width: 85%
  &__item
    text-align: center
    padding-bottom: 1.8rem
    &.active > a
      position: relative
      background: rgba(0, 121, 194, .8)
      color: #fff
      &::before
        top: 100%;
        left: 50%;
        border: solid transparent;
        content: " ";
        height: 0;
        width: 0;
        position: absolute;
        pointer-events: none;
        border-color: rgba(0, 121, 194, 0);
        border-top-color: rgba(0, 121, 194, .8)
        border-width: 15px;
        margin-left: -15px;
  &__link
    background: #f7f7f7
    display: block
    padding: 2rem 0
    color: #333
    &:hover
      background: rgba(0, 121, 194, .8)
      color: #fff
  &__button
    top: 38%
    &-prev
      left: 0
      @media (max-width: 768px)
        left: .5rem
    &-next
      right: 0
      @media (max-width: 768px)
        right: .5rem

.swiper-restruct
  position: static
  width: 85%
  & .services-with__button
    &-prev
      left: 0
      @media (max-width: 768px)
        left: .5rem
    &-next
      right: 0
      @media (max-width: 768px)
        right: .5rem

.services-with
  position: static
  width: 85%
  &__item
    text-align: center
    &.active > a
      background: rgba(0, 121, 194, .8)
      color: #fff
  &__link
    background: #f7f7f7
    display: block
    padding: 2rem 0
    color: #333
    &:hover
      color: #fff
  &__button
    &-prev
      left: 0
      @media (max-width: 768px)
        left: .5rem
    &-next
      right: 0
      @media (max-width: 768px)
        right: .5rem

.aside-accordion
  max-height: 20rem
  overflow-y: auto
  &::-webkit-scrollbar
    width: .5rem
  &::-webkit-scrollbar-track
    -webkit-box-shadow: inset 0 0 .6rem rgba(0,0,0,.3)
  &::-webkit-scrollbar-thumb
    background-color: #3393ce
    outline: .1rem solid slategrey
  &__item
    padding: 1rem 0
    & > i.fa
      vertical-align: top
      margin-top: .2rem
    & p
      padding: 0 2rem
  &__link
    position: relative
    max-width: 85%
    color: #333
    display: inline-block
    margin: 0 1rem
    margin-bottom: 1rem
    & > i.fa
      position: absolute;
      top: .15rem;
      right: -.5rem;
    & + i.fa
      vertical-align: top
      margin-top: .2rem
      margin-right: .5rem
    &[aria-expanded=true]
      font-weight: 600
    &:hover,
    &:active,
    &:focus
      color: #333
    & i.fa
      margin-left: 1rem
  & + p
    background: #f7f7f7
    padding: 2rem
    border: .1rem solid #c1c1c1
    margin-top: 4rem
  & ~ span
    cursor: pointer
    display: inline-block
    width: 49%
    background: rgba(153, 153, 153, .3);
    text-align: center
    padding: 2rem
    margin-top: 2rem
    font-size: 1.8rem
    @media (max-width: 500px)
      width: 100%
      margin-right: 0
    & h5
      font-size: 2rem
    &:first-of-type
      margin-right: 2%
    &:last-of-type
      margin-right: 0
  & ~ .dop
    & b > span
      cursor: pointer
      color: rgba(51, 51, 51, .5)
      border-bottom: .1rem dashed
      display: inline-block
      margin: 2rem 0
      & + i.fa
        margin-left: .5rem
    & > div > span
      cursor: pointer
      font-size: 2rem
      font-weight: 500
      & img
        max-width: 10rem
        margin-left: 2rem

.tab-list
  &__item
    &.active
      & a
        border: .1rem solid #3393ce
        border-right: none
        color: #3393ce
        &::after
          border-color: rgba(255, 255, 255, 0)
          border-left-color: #fff
          border-width: 23px
          margin-top: -23px
        &::before
          border-color: rgba(51, 147, 206, 0);
          border-left-color: #3393ce;
          border-width: 24px
          margin-top: -24px
        & i.fa
          color: #3393ce
  &__link
    height: 4.8rem
    display: block
    padding: 1.13rem 2rem
    padding-right: 0
    border: .1rem solid transparent
    border-right: none
    margin: .5rem 0
    margin-right: 3rem
    color: #333
    position: relative
    &::after,
    &::before
      left: 100%
      top: 50%
      border: solid transparent
      content: " "
      height: 0
      width: 0
      position: absolute
      pointer-events: none
    &:hover
      border: .1rem solid #3393ce
      color: #3393ce
      border-right: none
      &::after
        border-color: rgba(255, 255, 255, 0)
        border-left-color: #fff
        border-width: 2.3rem
        margin-top: -2.3rem
      &::before
        border-color: rgba(51, 147, 206, 0);
        border-left-color: #3393ce;
        border-width: 2.4rem
        margin-top: -2.4rem
      & i.fa
        color: #3393ce
    & i.fa
      font-size: 2rem
      margin-right: 1rem

.panel-group
  @media (max-width: 768px)
    margin-top: 2rem
  & .panel-heading
    padding: 0
    & > [data-parent]
      display: block
      padding: 1rem
      padding-left: 2rem
      color: #808080
      transition: all .1s
      & span
        border-bottom: .1rem dashed #e1e1e1
      & i.fa
        margin-right: 1rem
      &[aria-expanded=true]
        border: none
        background: rgba(51, 147, 206, .8)
        color: #fff
        & i.fa
          color: #fff
          &::before
            content: "\f068" !important
  & h4
    & + p
      margin: 2rem 0
      border: .1rem solid #e7e7e7
      border-left: .1rem solid #777
      background: #e5e5e5
      padding: 1rem 1rem 1.5rem 2.5rem
      &::before
        background: url(../img/b-additional-questions.png) 0 0 no-repeat;
        content: '';
        height: 27px;
        left: 20px;
        top: 0;
        width: 25px;
        display: block;
        margin-top: -17px;
  & .panel
    & ol
      & li
        padding-left: 1rem
      & + div
        padding-left: 3rem
        & a
          display: inline-block
          margin-bottom: 1rem
          & i.fa
            margin: 0 .5rem
    & ul
      margin: 2rem
      & li
        position: relative;
        font-size: 14px;
        color: #26272d;
        margin: 4px 0;
        padding-left: 30px;
        line-height: 24px;
        &::before
          content: ""
          width: 14px
          height: 10px
          position: absolute
          top: 6px
          left: 0
          background-image: url(../img/list_icon.png)
    & [aria-multiselectable] [data-parent]
      display: inline-block
      margin: 2rem 0 .5rem
      & > i.fa
        cursor: pointer
        margin-left: .5rem
        margin-right: .5rem
    & .bordered
      padding: 1rem;
      padding-left: 2rem;
      margin-bottom: 2rem;
      &-red
        border: 1px solid #e7e7e7;
        border-left: 1px solid red;
        background: #f5f5f5;
      &-gray
        border: 1px solid rgba(40, 133, 34, 0.42);
        background: #ffffff;
