.section
  &__audit
    & .tab-content
      margin-bottom: 4rem
      padding: 0 2rem
    & .restuct
      vertical-align: top
      margin-top: 2rem
      width: 10%
      display: inline-block
      position: relative
      text-align: center
      & i.fa
        display: block
        text-align: center
        font-size: 5rem
      & p
        font-size: 1.2rem
        text-align: center
        margin-top: 2rem
      & img
        width: 5rem
        position: relative
        top: 2rem
    & .categories
      position: relative
      &__item
        background-image: linear-gradient(to top, #f7f7f7, transparent)
        border: .1rem solid #e1e1e1
        &:hover
          background: #0079c2
          & a
            color: #fff
            & i.fa
              color: #fff
      &__link
        padding: 2rem
        display: block
        color: #333
        text-align: center
        & i.fa
          display: block
          text-align: center
          font-size: 4rem
          margin-bottom: 1rem

.aside
  & > *:first-of-type
    border-right: .1rem solid #c1c1c1
    padding-right: 5rem
  & > *:last-of-type
    padding-left: 5rem
  &__right
    & i.fa
      font-size: 5rem
    & h5
      margin: 1rem 0
      & + p
        font-size: 1.2rem
  &__callback
    padding: 4rem 0
    & h2
      font-size: 2rem
      text-align: center
      margin-bottom: 2rem
    & .form-group
      width: 100%
      & .input
        width: 100%
    & button
      width: 100%
      margin-top: 2rem

.audit
  position: static
  width: 95%
  &__item
    text-align: center
    &.active > a
      background: rgba(0, 121, 194, .8)
      color: #fff
  &__link
    background: #f7f7f7
    display: block
    padding: 2rem 0
    color: #333
    &:hover
      background: rgba(0, 121, 194, .8)
      color: #fff
  &__button
    &-prev
      left: 0
    &-next
      right: 0

.services-with
  position: static
  width: 95%
  &__item
    text-align: center
    &.active > a
      background: rgba(0, 121, 194, .8)
      color: #fff
  &__link
    background: #f7f7f7
    display: block
    padding: 2rem 0
    color: #333
    &:hover
      background: rgba(0, 121, 194, .8)
      color: #fff
  &__button
    &-prev
      left: 0
    &-next
      right: 0

.aside-accordion
  max-height: 20rem
  overflow-y: auto
  &::-webkit-scrollbar
    width: .5rem
  &::-webkit-scrollbar-track
    -webkit-box-shadow: inset 0 0 .6rem rgba(0,0,0,.3)
  &::-webkit-scrollbar-thumb
    background-color: #3393ce
    outline: .1rem solid slategrey
  &__item
    padding: 1rem 0
    & p
      padding: 0 2rem
      padding-top: 1rem
  &__link
    color: #333
    display: inline-block
    margin: 0 1rem
    &[aria-expanded=true]
      font-weight: 600
    &:hover,
    &:active,
    &:focus
      color: #333
    & i.fa
      margin-left: 1rem
  & + p
    background: #f7f7f7
    padding: 2rem
    border: .1rem solid #c1c1c1
    margin-top: 4rem
  & ~ span
    display: inline-block
    width: 49%
    background: rgba(153, 153, 153, .3);
    text-align: center
    padding: 2rem
    margin-top: 2rem
    font-size: 1.8rem
    @media (max-width: 500px)
      width: 100%
      margin-right: 0
    & h5
      font-size: 2rem
    &:first-of-type
      margin-right: 2%
    &:last-of-type
      margin-right: 0
  & ~ .dop
    & span
      cursor: pointer
      color: rgba(51, 51, 51, .5)
      border-bottom: .1rem dashed
      display: inline-block
      margin: 2rem 0
      & + i.fa
        margin-left: .5rem
    & p
      font-size: 2rem
      font-weight: 500
      & img
        max-width: 10rem
        margin-left: 2rem

.tab-list
  &__item
    &.active
      & a
        border: .1rem solid #3393ce
        border-right: none
        color: #3393ce
        &::after
          border-color: rgba(255, 255, 255, 0)
          border-left-color: #fff
          border-width: 23px
          margin-top: -23px
        &::before
          border-color: rgba(51, 147, 206, 0);
          border-left-color: #3393ce;
          border-width: 24px
          margin-top: -24px
        & i.fa
          color: #3393ce
  &__link
    height: 4.8rem
    display: block
    padding: 1.13rem 2rem
    padding-right: 0
    border: .1rem solid transparent
    border-right: none
    margin: .5rem 0
    margin-right: 2rem
    color: #333
    position: relative
    &::after,
    &::before
      left: 100%
      top: 50%
      border: solid transparent
      content: " "
      height: 0
      width: 0
      position: absolute
      pointer-events: none
    &:hover
      border: .1rem solid #3393ce
      color: #3393ce
      border-right: none
      &::after
        border-color: rgba(255, 255, 255, 0)
        border-left-color: #fff
        border-width: 2.3rem
        margin-top: -2.3rem
      &::before
        border-color: rgba(51, 147, 206, 0);
        border-left-color: #3393ce;
        border-width: 2.4rem
        margin-top: -2.4rem
      & i.fa
        color: #3393ce
    & i.fa
      font-size: 2rem
      margin-right: 1rem

#accordion
  @media (max-width: 768px)
    margin-top: 2rem
  & [data-parent="#accordion"]
    color: #808080
    border-bottom: .1rem dashed #e1e1e1
    & i.fa
      margin-right: 1rem
    &[aria-expanded=true]
      color: #000
      border: none
      & i.fa
        color: #000
  & h4
    & + p
      margin: 2rem 0
  & .panel
    & ol
      & li
        padding-left: 1rem
      & + div
        padding-left: 3rem
        & a
          display: inline-block
          margin-bottom: 1rem
          & i.fa
            margin: 0 .5rem